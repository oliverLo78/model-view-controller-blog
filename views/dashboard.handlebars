{{#each posts as |post|}}

<h1>Dashboard</h1>

 <div>
    <div class="row mb-4 project">
  <div class="col-md-5">
     <!-- Render the title of one comment using a handlebars.js expression -->
    <h2><a href="/post/{{post.id}}">{{post.post_title}}</a></h2>
    <p>Created by {{post.user.name}}</p>
  </div>
        <div class="col-md-7">
            <p>{{post.description}}</p>
        </div>
    </div>
</div> 

{{/each}}

<div class="form-group">
    <label for="exampleFormControlSelect1">Title</label>
    <input class="form-control" id="title-dashboard">
    
</div>
<div class="form-group">
    <label for="exampleFormControlSelect2">Content</label>
    <input class="form-control" id="content-dashboard">
    <button type="button" id="dashboard-form" class="btn btn-secondary btn-lg btn-block">Login!</button>
    <a href="/signup">Sign up instead!</a>
    
</div>

  <script src="/public/js/dashboard.js"></script>